    h1 Wedding Details

.row
  .small-12.medium-8.medium-offset-2.large-6.large-offset-3.columns.margin-bottom
    label(for="ceremonyTime")
      h2 Ceremony Portion 
        input(type="checkbox" ng-model="eventDetails.wedding.ceremony" name="ceremonyTime" value="Ceremony")
      select(ng-if="eventDetails.wedding.ceremony" name="ceremonyTime" ng-model="eventDetails.wedding.ceremonyPlayTime" required)
        option(selected="selected" disabled="disabled" value="") How long will we be performing during this portion?
        option(ng-repeat="length in dd.eventLengthOptions" value="{{length}}") {{length}}
      .error-msg(ng-messages="eventDetailsForm.ceremonyPlayTime.$error" ng-show="dd.submitCheck")
        div(ng-messages-include="app/components/error-messages/error-messages.html")

